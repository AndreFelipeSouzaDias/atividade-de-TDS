programa
{
	
	funcao inicio()
	{
	 real comprimento
	 real largura
	 real area
	 real dobro_area
	 real dobro_area_cm

	escreva("Digite o comprimento do gramado (em metros): ")
   leia(comprimento)

     escreva("Digite a largura do gramado (em metros): ")
   leia(largura)

   area = comprimento * largura
   dobro_area = area * 2
   dobro_area_cm = dobro_area * 10000

     escreva("A. A área do gramado é: ", area, " m²", "\n")
     escreva("B. O dobro da área é: ", dobro_area, " m²", "\n")
     escreva("C. O dobro da área em centímetros quadrados é: ", dobro_area_cm, " cm²")
	}
}
